<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_product_approval_form_view" model="ir.ui.view">
        <field name="name">product.approval.product.form</field>
        <field name="model">product.approval</field>
        <field name="inherit_id" ref="product.product_approval_only_form_view"/>
        <field name="arch" type="xml">
             <xpath expr="//form/header" position="inside">
                    <button name="button_draft" string="Reset to Draft" type="object" class="btn-primary" attrs="{'invisible':[('state','=','draft')]}" groups="bi_product_approval.group_type_user_res"/>
                    <button name="button_approve" string="Approve" type="object" class="btn-primary" groups="stock_approval.group_type_user_res"
                        attrs="{'invisible':[('state','=','approve')]}"/>
                    <field name="state" widget="statusbar"/>
            </xpath>
        </field>
    </record>

    <record id="inherit_product_product_form_view" model="ir.ui.view">
        <field name="name">product.product.form</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
             <xpath expr="//form/header" position="inside">
                    <button name="button_draft" string="Reset to Draft" type="object" class="btn-primary" attrs="{'invisible':[('state','=','draft')]}"/>
                    <button name="button_approve" string="Approve" type="object" class="btn-primary" groups="stock_approval.group_type_user_res"
                        attrs="{'invisible':[('state','=','approve')]}"/>
                    <field name="state" widget="statusbar"/>
            </xpath>
        </field>
    </record> 
</odoo>